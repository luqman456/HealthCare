<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_thin_color"
    tools:context=".HealthDataActivity">


    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:ms_background_color="@color/white"
        app:ms_text_color="@color/black"
        />

    <LinearLayout
        android:id="@+id/linearsugarLevel"
        android:layout_below="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood sugar level (mg/dL)"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginBottom="@dimen/_3sdp"
            />

        <EditText
            android:id="@+id/editTextSugar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:ems="10"
            android:hint="Enter Blood sugar level"
            android:background="@xml/edit_text_border"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:paddingLeft="@dimen/_10sdp"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            />

        <EditText
            android:id="@+id/editsugarDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:ems="10"
            android:hint="Select Date"
            android:background="@xml/edit_text_border"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/_10sdp"
            android:text=""
            android:enabled="false"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btnsugar"
                android:layout_width="@dimen/_145sdp"
                android:layout_height="@dimen/_45sdp"
                android:backgroundTint="@color/darkred"
                android:text="Add Sugar"
                android:drawableLeft="@drawable/add"
                android:gravity="center"
                android:paddingRight="@dimen/_15sdp"
                />

            <Button
                android:id="@+id/btnsugarDate"
                android:layout_width="@dimen/_145sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkred"
                android:text="Add Date"
                android:drawableLeft="@drawable/date"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearbpLevel"
        android:layout_below="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BP level"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginBottom="@dimen/_3sdp"
            />

        <EditText
            android:id="@+id/editTextSystolic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:ems="10"
            android:hint="Enter Systolic Pressure level"
            android:background="@xml/edit_text_border"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:paddingLeft="@dimen/_10sdp"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BP level"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginBottom="@dimen/_3sdp"
            />

        <EditText
            android:id="@+id/editTextDiastolic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:ems="10"
            android:hint="Enter Diastolic Pressure level"
            android:background="@xml/edit_text_border"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:paddingLeft="@dimen/_10sdp"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            />

        <EditText
            android:id="@+id/editbPDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:ems="10"
            android:hint="Select Date"
            android:background="@xml/edit_text_border"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/_10sdp"
            android:text=""
            android:enabled="false"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btnbP"
                android:layout_width="@dimen/_145sdp"
                android:layout_height="@dimen/_45sdp"
                android:backgroundTint="@color/darkred"
                android:text="Add BP"
                android:drawableLeft="@drawable/add"
                android:gravity="center"
                android:paddingRight="@dimen/_15sdp"
                />

            <Button
                android:id="@+id/btnbpDate"
                android:layout_width="@dimen/_145sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkred"
                android:text="Add Date"
                android:drawableLeft="@drawable/date"
                />



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>