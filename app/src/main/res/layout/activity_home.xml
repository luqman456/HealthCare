<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/colorBackground"
    >

    <LinearLayout
        android:id="@+id/linearProfileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/gray_thin_color"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textViewNameChar"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:textSize="25sp"
            android:background="@drawable/white_circle_drawable"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_40sdp"
            />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/colorBackground"
            android:text="luqman"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/linearProfileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProfile"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:elevation="0dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardCornerRadius="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/edit"
                        android:layout_centerHorizontal="true"
                        />


                    <TextView
                        android:layout_below="@id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:gravity="center"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        />




                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewHealthLink"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:elevation="0dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardCornerRadius="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/link"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/links"
                        android:layout_centerHorizontal="true"
                        />


                    <TextView
                        android:layout_below="@id/link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health Tips"
                        android:gravity="center"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        ></TextView>




                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewHealthtData"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:elevation="0dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardCornerRadius="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/health_data"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/adddata"
                        android:layout_centerHorizontal="true"
                        />


                    <TextView
                        android:layout_below="@id/health_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health Data"
                        android:gravity="center"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/_16sdp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold" />




                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewHealthReport"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:elevation="0dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardCornerRadius="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/report"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/report"
                        android:layout_centerHorizontal="true"
                        />


                    <TextView
                        android:layout_below="@id/report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health Report"
                        android:gravity="center"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/_16sdp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewViewData"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:elevation="0dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardCornerRadius="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/view_date"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/viewdata"
                        android:layout_centerHorizontal="true"
                        />


                    <TextView
                        android:layout_below="@id/view_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Data"
                        android:gravity="center"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />




                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>